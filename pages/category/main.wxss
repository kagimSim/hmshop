page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 4rpx solid var(--themeColor);
}
.cates .cates_container .right_content {
  flex: 5;
}
.right_content {
  overflow: hidden;
}
.right_content .goods_group {
  display: flex;
  flex-wrap: wrap;
}
.right_content .goods_group .goods_title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 100%;
}
.right_content .goods_group .goods_title .delimiter {
  color: #999;
  padding: 0rpx 20rpx;
}
.right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.right_content .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.right_content .goods_group .goods_list navigator image {
  width: 50%;
}
.right_content .goods_group .goods_list navigator view {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 100%;
}
